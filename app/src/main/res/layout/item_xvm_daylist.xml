<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/linearlayout_margin_less"
    android:layout_marginBottom="@dimen/linearlayout_margin_less"
    android:background="@drawable/recyclerview_bg"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/xvm_daylist_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="时间"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/xvm_daylist_battles"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="场次"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/xvm_daylist_wins"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="胜率"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/xvm_daylist_effect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="效率"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/xvm_daylist_kill"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="击杀"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/xvm_daylist_hit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="伤害"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/xvm_daylist_assist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="助攻"
        android:textSize="16sp" />

</LinearLayout>