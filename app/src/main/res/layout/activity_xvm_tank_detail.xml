                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/linearlayout_margin_less"
                    android:layout_marginLeft="@dimen/linearlayout_margin_less">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
