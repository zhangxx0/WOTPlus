<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/linearlayout_margin"
    android:background="@drawable/recyclerview_bg"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="15"
        android:gravity="center_vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/tankCountry"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/linearlayout_margin"
                android:scaleType="fitXY"
                android:src="@drawable/ch_china"/>

            <TextView
                android:id="@+id/tankLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/linearlayout_margin_more"
                android:layout_gravity="right|center_vertical"
                android:gravity="right"
                android:text="VII"
                android:textColor="@color/bg_blue"
                />
        </FrameLayout>


        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/tankIcon"
                android:layout_width="125dp"
                android:layout_height="31dp"
                android:scaleType="fitXY"
                android:src="@drawable/type62"
                android:adjustViewBounds="false" />

            <TextView
                android:id="@+id/tankName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:layout_marginLeft="@dimen/linearlayout_margin_more"
                android:text=" 查狄伦 25t"
                android:textColor="@color/text_shadow"/>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:gravity="center_vertical|right">


        <TextView
            android:id="@+id/tankFightNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/linearlayout_margin_less"
            android:text="718"
            android:textColor="@color/material_deep_teal_500"/>

        <TextView
            android:id="@+id/tankWinRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/linearlayout_margin"
            android:layout_marginLeft="@dimen/linearlayout_margin_less"
            android:text="54%"
            android:textColor="@color/green"/>

        <ImageView
            android:id="@+id/tankBadge"
            android:layout_width="35dp"
            android:layout_height="31dp"
            android:layout_marginRight="@dimen/linearlayout_margin_more"
            android:src="@drawable/ach_empty" />
    </LinearLayout>


</LinearLayout>